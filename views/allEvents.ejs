<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MERUPULU NEWS</title>
    <style>
        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .media-card {
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
            
        }

        .media-card:hover{
            transform: translateY(-5px);
        }

        .media-image {
            height: 150px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            
        }

        .media-content {
            padding: 10px;
            flex-grow: 1;
        }

        .media-name {
            font-size: 1.2rem;
            margin: 0;
            margin-bottom: 5px;
        }

        .delete-button {
            background-color: #c71e0b;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            align-self: flex-end;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .delete-button:hover {
            background-color: #670204;
            
           
        }
    </style>
    <link rel="stylesheet" href="../dashboard.css">
</head>
<body>
    <header>
        <h1>Merupulu News App Admin Dashboard</h1>
        <!-- Add any navigation or user information here if needed -->
    </header>

    <div class="container">
        <!-- sidebar -->
        <%- include('./partials/sidebar')%>

        <div class="main-content">
            <h2>Events</h2>
            <div class="gallery">
                <% for (let event of events) { %>
                   <% type = event.eventResourceUrl.substring(event.eventResourceUrl.length -4,event.eventResourceUrl.length) %>
                   <% title = event.eventtitle != '' ? event.eventTitle : "No title" %>
                    <% if( type != '.mp4') { %>
                <div class="media-card">   
                    <img src="<%= event.eventResourceUrl %>" alt="Image 1" class="media-image">
                    <div class="media-content">
                        <h3 class="media-name"><%= title %></h3>
                        <button class="delete-button">Delete</button>
                    </div>
                </div>
                <% } %>
                     <% if(type == '.mp4') { %>
                        <div class="media-card">
                            <video class="media-image" controls>
                                <source src="<%= event.eventResourceUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            <div class="media-content">
                                <h3 class="media-name"><%= title %></h3>
                                <button class="delete-button">Delete</button>
                            </div>
                        </div>
                <% } %> 
                <% } %>
                
        </div>
    </div>
</body>
</html>
