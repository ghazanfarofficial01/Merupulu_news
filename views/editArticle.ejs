<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MERUPULU</title>
    <!-- bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar bg-body-tertiary ">
      <div class="container-fluid ">
        <a class="navbar-brand" href="/admin/dashboard">
          <img src="https://res.cloudinary.com/dydvdhjky/image/upload/v1690894435/logo_dzsncw.png" alt="Logo" width="65" height="54" class="d-inline-block align-text-center">
          MERUPULU NEWS
        </a>
        <a href="/admin/dashboard" class=""><button class="btn btn-secondary ">HOME</button></a>
      </div>
    </nav>

    <section class="container forms">
      <div class="form login">
        <div class="form-content">
          <form action="/admin/article/<%=article._id%>?_method=PUT" method="POST">
            <div class="field input-field input-label">
              <label for="author">Author</label>
              <input
                type="text"
                id="author"
                name="author"
                placeholder="FullName"
                value="<%= article.author %>"
                class="input"
              />
            </div>
            <div class="field input-field input-label">
              <label for="content">Content</label>
              <input
                type="text"
                id="content"
                name="content"
                placeholder="Content"
                value="<%= article.content %>"
                class="input"
              />
            </div>
            <div class="input-label">
              <label for="desc">Description</label>
              <textarea rows="4" cols="55" id="desc" name="desc"><%= article.description %></textarea>
            </div>
            <label for="category">Category</label>
            <select name="category" id="category">
              <option value= " " selected> choose category</option>
              <option value="Health">Health</option>
              <option value="India">India</option>
              <option value="Business">Business</option>
              <option value="Vehicles">Vehicles</option>
              <option value="Entertainment">Entertainment</option>
              <option
                value="Travel
              "
              >
                Travel
              </option>
              <option
                value="science
              "
              >
                science
              </option>
              <option
                value="Sports
              "
              >
                Sports
              </option>
              <option
                value="Technology
              "
              >
                Technology
              </option>
              <option
                value="World

              "
              >
                World
              </option>
              <option
                value="Education

              "
              >
                Education
              </option>
              <option
                value="Viral

              "
              >
                Viral
              </option>
              <option
                value="Art
              "
              >
                Art
              </option>
            </select>
            <div class="field input-field input-label">
              <label for="source">Source</label>
              <input
                type="text"
                id="source"
                name="source"
                placeholder="Source"
                value="<%= article.source %>"
                class="input"
              />
            </div>
            <div class="field input-field input-label">
              <label for="title">Title</label>
              <input
                type="text"
                name="title"
                id="title"
                placeholder="Title"
                value="<%= article.title %>"
                class="input"
              />
            </div>
            <div class="field input-field input-label">
              <label for="image">Image</label>
              <button id="upload_widget" class="cloudinary-button">
                Upload images
              </button>
              <div class="input-label desc">
                <input class="hide" type="url" id="url" name="url" />
              </div>
            </div>
            <!-- <div class="field input-field input-label"> </div> -->
            <button type="submit" class="sbm-btn field">Submit</button>
          </form>
        </div>
      </div>
    </section>

    <script
      src="https://widget.cloudinary.com/v2.0/global/all.js"
      type="text/javascript"
    ></script>

    <script src="/upload_widget.js"></script>
    <!-- bootstrap script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>
